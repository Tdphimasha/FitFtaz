<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".CalorieCounter">

    <TextView
        android:id="@+id/textViewConsumed"
        android:layout_width="240dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="155dp"
        android:text="Calories Consumed:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextConsumed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="318dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewBurned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextConsumed"
        android:layout_marginTop="21dp"
        android:text="Calories Burned:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextBurned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewBurned"
        android:layout_marginTop="15dp"
        android:inputType="number" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="372dp"
        android:layout_height="61dp"
        android:layout_below="@id/editTextBurned"
        android:layout_marginTop="59dp"
        android:backgroundTint="#6EC537"
        android:text="Calculate"
        android:textColor="#170909"
        app:cornerRadius="25dp" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/buttonCalculate" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="196dp"
        app:srcCompat="@drawable/calorie" />

</RelativeLayout>
